/* pages/research_list/case/case.wxss */

.title{
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  color: #397CDA;
  background-color: #F8F8F8;
  border-bottom: 1rpx solid #ECECEC;
}
.top_sec{
  height: 100rpx;
  margin-top: 30rpx;
  line-height: 100rpx;
  color: #4D4D4D;
  font-size: 30rpx;
  display: flex;
  background-color: white;
  flex-direction: row;
}
.name{
  margin-left: 20rpx;
}
.text{
  margin-left: 20rpx;
  line-height: 100rpx;
  font-size: 34rpx;
  color: #DB2E2E;
}
.table{
  width: 100%;
  height: 404rpx;
  background-color: white;
}
.table_list{
  width: 100%;
  height: 100rpx;
  border-bottom: 1rpx solid #E5E5E5;
  display: flex;
  line-height: 100rpx;
  font-size: 24rpx;
  color: #515151;
  text-align: center;
  flex-direction: row;
}
.list_left{
  width: 22.5%;
  border-right: 1rpx solid #E5E5E5;
}
.right{
  width: 50%;
  line-height: 50rpx;
}
.right_top{
  height: 50rpx;
  border-bottom: 1rpx solid #E5E5E5;
}
.bottom{
  display: flex;
  flex-direction: row;
}
.bottom_list{
  width: 31%;
  border-right: 1rpx solid #E5E5E5;
}
.bottoms{
  height: 100%;
}
.input{
  width: 90%;
  margin-left: 2.5%;
  /* border: 1rpx solid black; */
  height: 100rpx;
  margin-right: 2.5%;
  line-height: 100rpx;
  font-size: 24rpx;
}
.button{
  background-color: #013F91;
  width: 100%;
  text-align: center;
  height: 100rpx;
  line-height: 100rpx;
  color: white;
  font-size: 32rpx;
  position: fixed;
  bottom: 0;
}
