/* pages/User/User.wxss */
.top{
  width: 100%;
  height: 250rpx;
  background-color: white;
}
.head_img{
  width: 150rpx;
  height: 150rpx;
  border: 1rpx solid black;
  margin-left: 20rpx;
  margin-top: 40rpx;
  border-radius: 50%;
}
.name{
  width: 40%;
  margin-left: 20rpx;
  height: 140rpx;
  margin-top: 60rpx;
  /* border: 1rpx solid black;  */
}
.uesr_name{
  line-height: 50rpx;
  color: #222222;
  font-size: 32rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.integral{
  width: 30%;
  height: 100rpx;
  margin-top: 60rpx;
  /* border: 1rpx solid black; */
}
.integral_right{
  height: 50rpx;
  line-height: 50rpx;
  font-size: 26rpx;
  min-width: 180rpx;
  border: 1rpx solid #FFC484;
  background-color: #FFFDF3;
  margin-top: 30rpx;
  border-radius: 30rpx;
  margin-left: 30rpx;
}
.integral_text{
  margin-left: 10rpx;
  color: #727170;
}
.integral_number{
  width: 50rpx;
  color: #E0550A;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.list{
  width: 100%;
  height:100rpx;
  display: flex;
  flex-direction: row;
  line-height: 100rpx;
  color: #2B2B2B;
  font-size: 30rpx;
  border-bottom: 1rpx solid #E3E3E3;
  background-color: white;
}
.img{
  width: 60rpx;
  margin-left: 20rpx;
}
.text{
  margin-left: 30rpx;
}