  /* border: 1rpx solid black; */
}
.left_top{
  /* border: 1rpx solid black; */
  display: flex;
  flex-wrap: wrap;
  font-size: 36rpx;
  color: #4E4E4E;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;   
}
.id_card{
  font-size: 26rpx;
