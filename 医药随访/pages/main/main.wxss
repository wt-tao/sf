  /* border: 1rpx solid black; */
}
.bg {
  display: none;
  position: absolute;
  top: 0%;
  left: 0%;
  width: 100%;
  height: 100%;
   background-color: black; 
  z-index: 1003;
  -moz-opacity: 0.7;
  opacity: 0.70;
  filter: alpha(opacity=70);
}

.show {
  display: none;
  position: absolute;
  top: 15%;
  left: 0;
  width: 70%;
  margin-left: 13%;
  height: 600rpx;
  padding: 8px;
  background-color: white;
  z-index: 1004;
  overflow: auto;
  border-radius: 20rpx;
}
